//=== SASS IMPORTS ==========================================================================
@import	"../../core_v3_5/mixins/background_gradient",
		"../../core_v3_5/mixins/border_radius",
		"../../core_v3_5/mixins/box_shadow",
		"../../core_v3_5/mixins/fonts",
		"../../core_v3_5/mixins/href",
		"../../core_v3_5/mixins/clearfix"
		;

//=== SASS VARS =============================================================================

//--- SIZE VARS -----------------------------------------------------------------------------
$context-size:15; // 15px

//--- SIZE FUNCTION -------------------------------------------------------------------------

// $target-size = size you want in pixels
// $context-size = base size in pixels
// $target-size/$context-size = size in ems

@function size($target-size) {
	@return $target-size/$context-size;
}

//--- SPRITE VARS ---------------------------------------------------------------------------
/* Uncomment code below and insert website name where it indicates [website] below */
/* $website-sprite:\#{url(/images/[website]/icon_sprite24.png)}; */


/*=== WEBSITE STYLES ======================================================================*/

/*--- GLOBAL ------------------------------------------------------------------------------*/
body									{
										background:url(/images/ui_guidelines/bg_graph.png) 0 0 repeat;
										background-color:transparent;
										}

.grid-adjust							{
										@include box-shadow(#{size(1)}em, #{size(1)}em, #{size(1)}em, #999);
										background-color:#FFF;
										border:1px solid #ccc;
										}

/*--- NAVBAR -------------------------------------------------------------------------------*/
.masthead								{
										@include background-gradient(#CCC, #333);
										border:0;
	.logo									{
											@include href-link(#FFF, none);
											text-shadow:0 -1px 1px #000;
		span									{
												color:#EFEFEF;
												font-weight:normal;
												}
											}
	.ui-navbar								{
											float:right;
		a										{
												color:#EEEEEE;
												outline:0;
												text-decoration:none;
												text-shadow:0 1px 1px #000;
												}
		ul										{
			li										{
				.sub-menu								{
														@include background-gradient(#EEEEED, #BBBBBB);
														}
				&:hover									{
														@include background-gradient(#F4F4F4, #EEEEED);
					a										{
															color:#161616;
															text-shadow:0 1px 1px #ffffff;
															}
						.sub-menu 							{
							dt									{
																color:#000;
																text-shadow:0 1px 1px #efefef;
																}
							dd									{
								a									{
									&:hover								{
																		background-color:#FFF;
																		}
																	}			
																}
							.reference							{
																color:#161616;
																font-weight:bold;
																text-shadow:0 1px 1px #ffffff;
																}
															}
														}
													}
												}
											}
										}


/*--- MASTHEAD DEMO ------------------------------------------------------------------------*/
.masthead-demo							{
										border-bottom:0 !important;
	.masthead-adjust						{
		
		/*--- MASTHEAD UTILITY NAV ---------------------------------------------------------*/
		.ui-masthead-util-nav					{
												background-color:transparent;
												@include box-shadow(0,1px,1px,#333);
												color:#666;
												text-shadow:0 1px 1px #efefef;
			a										{
													color:#333;
													text-decoration:none;
				&:hover									{
														color:#fff;
														text-shadow:0 1px 1px #333;
														}
													}
			.pipe									{
													color:#333;
													}
												}

		/*--- MASTHEAD MAIN NAV -------------------------------------------------------------*/
		.ui-masthead-nav						{
			dd										{
				a										{
														background-color:transparent;
														color:#EEEEEE;
														text-shadow:0 -1px 1px #000;
					&:hover									{
															@include background-gradient(#999998,#666667);
															text-shadow:0 -1px 1px #333;
															}
					&.current								{
															@include background-gradient(#999998,#666667);
															}
														}
													}
			.ui-masthead-nav-more					{
				.ui-masthead-nav-more-menu				{
					dd										{
						a										{
																background-color:#333;
																}
															}
														}
				&:hover									{
					.ui-masthead-nav-more-menu				{
															left:auto;
															top:auto;
						.first-child							{
							a										{
																	border-top:0;
																	}
																}
						.last-child								{
							a										{
																	@include border-radius(0 0 #{size(6)}em #{size(6)}em,all);
																	border-bottom:1px solid #666;
																	}
																}
															}
														}
													}
												}
											}
										}

/*--- FOOTER -------------------------------------------------------------------------------*/
.footer									{
										@include background-gradient(#cccccd, #333334);
										border:0;
										color:#EEEEEE;
										text-shadow:0 1px 1px #000;
	a										{
											color:#333;
											text-shadow:0 1px 1px #ccc;
											text-decoration:none;
		&:hover									{
												color:#fff;
												text-shadow:0 1px 1px #333;
												}
											}
	dl										{
		dt										{
												color:#333;
												text-shadow:0 1px 1px #efefef;
												}
											}
	.ui-back-to-top							{
											border-top:0;
		a										{
												color:#EEEEEE;
												text-shadow:0 1px 1px #000;
			&:hover									{
													@include background-gradient(#EEEEED, #BBBBBB);
													@include border-radius(#{size(6)}em,all);
													@include box-shadow(0, 0, 0, transparent);
													border:1px solid #777777;
													text-decoration:none;
													}
			&:active								{
													@include background-gradient(#BBBBBB, #EEEEED);
													text-shadow:0 1px -1px #fff;
													}
												}
											}
	hr										{
											border-top:0;
											border-bottom:1px solid #999;
											background-color:#494949;
											}
										}

/*--- HOMEPAGE -----------------------------------------------------------------------------*/
.hp-framework-description				{
	a										{
											@include href-link(#999, none);
											display:block;
											padding:#{size(5)}em;
		h4										{
												font-weight:normal;
												color:#01417E;
												text-decoration:underline;
												}
		&:hover									{
												@include href-link(#333, none);
												@include border-radius(#{size(4)}em, all);
												background-color:#EFEFEF;
			h4										{text-decoration:none;}
												}
											}
										}

.fw-version								{
										@include box-shadow(1px, 1px, 1px, #999);
										background-color:#CCC;
										color:#01417e;
										text-shadow:0 1px 1px #FFF;
										}

/*--- LAYOUT/GRIDS PAGE --------------------------------------------------------------------*/
.unit									{
										@include background-gradient(#EFEFEF, #dddbdb);
										}

/*--- FORM PAGE --------------------------------------------------------------------*/
.ui-tooltip								{
										background-position:-95px -1153px;
										}
.ui-tooltip-close-icn					{
										background-position:-355px -1093px;
										}
.ui-icn-sprite							{
										background-image:url("/images/core/icon_sprite.png");
										}

/*--- BUTTON PAGE --------------------------------------------------------------------------*/
.close-btn .ui-btn-icn					{
										background-position:-356px -1093px;
										}
.add-btn .ui-btn-icn					{
										background-position:-194px -1091px;
										}
.fav-btn .ui-btn-icn					{
										background-position:-128px -66px;
										}
.dl-btn .ui-btn-icn						{
										background-position:-322px -225px;
										}
.calc-btn .ui-btn-icn					{
										background-position:-417px -448px;
										}
.gs-btn .ui-btn-icn						{
										background-position:-288px -1025px;
										}

/*--- COLOR PAGE --------------------------------------------------------------------------*/
.color-tbl td small						{
										font-style:italic;
										}
.color-tbl th:nth-child(1),
.color-tbl td:nth-child(1)				{
										font-weight:bold;
										}
.color-tbl td:first-child				{
										color:#CCC;
										font-weight:normal;
										}
.color-tbl .select-row td				{
										color:#CCC;
										font-weight:normal;
										}
.color-tbl tr:hover						{
										background-color:#EFEFEF;
										}
.color-tbl tr td:hover					{
										border:1px solid #999;
										}
.color-tbl tr td:last-child:hover		{
										border-color:#FFF;
										}
.color-tbl thead tr:hover				{
										background-color:#FFF;
										}
.color-tbl .orange-gradient				{
										@include background-gradient(#ffae00,#e17f00);
										}
.color-tbl .orange-gradient:hover		{
										@include background-gradient(#ffae00,#cf7500);
										}
.color-tbl .orange-gradient:active		{
										@include background-gradient(#cf7500,#ffae00);
										}
.color-tbl .green-gradient				{
										@include background-gradient(#a0de22,#86b32d);
										}
.color-tbl .green-gradient:hover		{
										@include background-gradient(#a0de22,#7ea630);
										}
.color-tbl .green-gradient:active		{
										@include background-gradient(#7ea630,#a0de22);
										}
.color-tbl .blue-gradient				{
										@include background-gradient(#00a8ff,#0082c3);
										}
.color-tbl .blue-gradient:hover			{
										@include background-gradient(#00a8ff,#0374ac);
										}
.color-tbl .blue-gradient:active		{
										@include background-gradient(#0374ac,#00a8ff);
										}

/*--- CORE VERSION PAGE --------------------------------------------------------------------*/
.core-version-tbl						{
	td,
	th										{
											color:#999;
											font-weight:normal;
											}
	tbody									{
		td										{
												color:#000;
												}
		small									{
												color:#999;
												}
		.v1										{
												background-color:#000;
												}
		.v2										{
												background-color:#787878;
												}
		.v3										{
												background-color:#0082C3;
												}
		.v3-1									{
												background-color:#00417D;
												}
		.v3-2									{
												background-color:#E17D05;
												}
		.v3-3									{
												background-color:#82B43C;
												}
		.v3-4									{
												background-color:magenta;
												}
		.v3-5									{
												background-color:cyan;
												}
		tr:hover								{
												background-color:#EFEFEF;
												}
		tr										{
			td:first-child:hover					{
													border: 1px dotted #CCC;
													}
												}
											}
	thead									{
		tr										{
												background-color:#FFF;
												}
											}
										}

/*--- MEDIAQUERY BREAKPOINTS PAGE ----------------------------------------------------------*/
.mediaquery_breakpoints					{
	.grid-adjust							{
											background-color:transparent;
											}
										}
.media-query-tbl						{
	thead									{
		td										{
												font-weight:bold;
												}
											}
										}

/*--- DEVICES PAGE -------------------------------------------------------------------------*/
.device_sizes							{
	.ui-form								{
											border-bottom:1px solid #CCC;
											}
										}

/*--- CODE SYNTAX HIGHLIGHTING --------------------------------------------------------------*/
.get-code								{
	.small									{
											@include background-gradient(#fceb5a, #f1c800);
											border:1px solid #ddb600;
											color:#615002;
											}
	&:link,
	&:visited								{
											color:#615002;
											text-decoration:none;
											}
	&:hover .small							{
											@include background-gradient(#fceb5a, #d9b503);
											color:#615002;
											}
	&:active .small							{
											@include background-gradient(#f1c800, #fceb5a);
											text-shadow:0 -1px 1px #FFF;
											}
										}


