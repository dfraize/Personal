//=== SASS IMPORTS ==========================================================================
@import	"../../core_v3_4/mixins/background_gradient",
		"../../core_v3_4/mixins/border_radius",
		"../../core_v3_4/mixins/box_shadow",
		"../../core_v3_4/mixins/fonts",
		"../../core_v3_4/mixins/href",
		"../../core_v3_4/mixins/clearfix"
		;

//=== SASS VARS =============================================================================

//--- SIZE VARS -----------------------------------------------------------------------------
$context-size:15; // 15px

//--- SIZE FUNCTION -------------------------------------------------------------------------

// $target-size = size you want in pixels
// $context-size = base size in pixels
// $target-size/$context-size = size in ems

@function size($target-size) {
	@return $target-size/$context-size;
}

