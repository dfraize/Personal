//=== SASS VARS =============================================================================

//--- SIZE VARS -----------------------------------------------------------------------------
$context-size:15; // 15px

//--- SIZE FUNCTION -------------------------------------------------------------------------

// $target-size = size you want in pixels
// $context-size = base size in pixels
// $target-size/$context-size = size in ems

@function size($target-size) {
	@return $target-size/$context-size;
}

.jcarousel-skin-st .jcarousel-container									{}
.jcarousel-skin-st .jcarousel-direction-rtl								{direction:rtl;}

/* .jcarousel-skin-st .jcarousel-container-horizontal					{width:900px; padding:20px 40px;} */
/* .jcarousel-skin-st .jcarousel-clip-horizontal						{width:900px; height:200px;} */

.jcarousel-skin-st .jcarousel-container-vertical						{}
.jcarousel-skin-st .jcarousel-clip-vertical								{}

/* .jcarousel-skin-st .jcarousel-item									{background-color:#FFF; width:75px; height:75px;} */
.jcarousel-skin-st .jcarousel-item-horizontal							{margin-left:0; margin-right:0;}
.jcarousel-skin-st .jcarousel-direction-rtl .jcarousel-item-horizontal	{margin-left:0; margin-right:0;}

.jcarousel-skin-st .jcarousel-item-vertical								{margin-bottom:10px;}
.jcarousel-skin-st .jcarousel-item-placeholder							{background:#FFF; color:#000;}

/*----- HORIZONTAL BUTTONS -----*/
.jcarousel-skin-st .jcarousel-next-horizontal							{position:absolute; top:43px; right:5px; width:32px; height:32px; cursor:pointer; background:transparent url(/images/st/next_horizontal.png) no-repeat 0 0;}
.jcarousel-skin-st .jcarousel-direction-rtl .jcarousel-next-horizontal	{left:5px; right:auto; background-image:url(/images/st/prev_horizontal.png);}
.jcarousel-skin-st .jcarousel-next-horizontal:hover						{background-position:-32px 0;}
.jcarousel-skin-st .jcarousel-next-horizontal:active					{background-position:-64px 0;}
.jcarousel-skin-st .jcarousel-next-disabled-horizontal,
.jcarousel-skin-st .jcarousel-next-disabled-horizontal:hover,
.jcarousel-skin-st .jcarousel-next-disabled-horizontal:active			{cursor:default; background-position:-96px 0;}
.jcarousel-skin-st .jcarousel-prev-horizontal							{position:absolute; top:43px; left:5px; width:32px; height:32px; cursor:pointer; background:transparent url(/images/st/prev_horizontal.png) no-repeat 0 0;}
.jcarousel-skin-st .jcarousel-direction-rtl .jcarousel-prev-horizontal	{left:auto; right:5px; background-image:url(/images/st/next_horizontal.png);}
.jcarousel-skin-st .jcarousel-prev-horizontal:hover						{background-position:-32px 0;}
.jcarousel-skin-st .jcarousel-prev-horizontal:active					{background-position:-64px 0;}
.jcarousel-skin-st .jcarousel-prev-disabled-horizontal,
.jcarousel-skin-st .jcarousel-prev-disabled-horizontal:hover,
.jcarousel-skin-st .jcarousel-prev-disabled-horizontal:active			{cursor:default; background-position:-96px 0;}

/*----- VERTICAL BUTTONS -----*/
.jcarousel-skin-st .jcarousel-next-vertical								{position:absolute; bottom:5px; left:43px; width:32px; height:32px; cursor:pointer; background:transparent url(/images/st/next_vertical.png) no-repeat 0 0;}
.jcarousel-skin-st .jcarousel-next-vertical:hover						{background-position:0 -32px;}
.jcarousel-skin-st .jcarousel-next-vertical:active						{background-position:0 -64px;}
.jcarousel-skin-st .jcarousel-next-disabled-vertical,
.jcarousel-skin-st .jcarousel-next-disabled-vertical:hover,
.jcarousel-skin-st .jcarousel-next-disabled-vertical:active				{cursor:default; background-position:0 -96px;}
.jcarousel-skin-st .jcarousel-prev-vertical								{position:absolute; top:5px; left:43px; width:32px; height:32px; cursor:pointer; background:transparent url(/images/st/prev_vertical.png) no-repeat 0 0;}
.jcarousel-skin-st .jcarousel-prev-vertical:hover						{background-position:0 -32px;}
.jcarousel-skin-st .jcarousel-prev-vertical:active						{background-position:0 -64px;}
.jcarousel-skin-st .jcarousel-prev-disabled-vertical,
.jcarousel-skin-st .jcarousel-prev-disabled-vertical:hover,
.jcarousel-skin-st .jcarousel-prev-disabled-vertical:active				{cursor:default; background-position:0 -96px;}